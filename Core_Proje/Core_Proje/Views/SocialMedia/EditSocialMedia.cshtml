@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Hesabını Güncelle</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.SocialMediaID)
                    </div>
                    <div class="form-group">
                        <label>İsim</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "color:yellow" })
                    </div>
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", style = "color:yellow" })
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", style = "color:yellow" })
                    </div>
                    <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
                    <button type="button" class="btn btn-outline-danger" onclick="goBack()">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

<script>
    function goBack() {
        window.history.back();
    }
</script>

