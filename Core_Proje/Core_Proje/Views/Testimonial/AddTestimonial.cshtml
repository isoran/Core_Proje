@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h3 class="mb-3">Yeni Referans Ekleme</h3>
@using (Html.BeginForm("AddTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Referans Ekleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control", style = "color:white" })
                    </div>
                    <div class="form-group">
                        <label>Unvan</label>
                        @Html.TextBoxFor(x => x.ClientBranch, new { @class = "form-control", style = "color:white" })
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control", style = "color:white" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.Comment, 5, 3, new { @class = "form-control", style = "color:white" })
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", style = "color:white" })
                    </div>
                    <button type="submit" class="btn btn-outline-success mr-2">Kaydet</button>
                    <button type="button" class="btn btn-outline-danger" onclick="goBack()">İptal</button>
                    @*<button class="btn btn-outline-danger">İptal</button>*@
                </form>
            </div>

        </div>
    </div>
}

<script>
    function goBack() {
        window.history.back();
    }
</script>

