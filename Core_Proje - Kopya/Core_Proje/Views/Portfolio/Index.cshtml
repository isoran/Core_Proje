@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projeler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Platform</th>
                            <th>Proje</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th>Tamamlanma Oranı</th>
                            <th style="text-align:center">Sil</th>
                            <th style="text-align:center">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#" class="avatar rounded-circle mr-3">
                                        <img alt="Image placeholder" src="@item.Platform">
                                    </a>
                                </td>
                                <td>
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="budget">
                                    @item.Price
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-success"></i>
                                        <span class="status">Tamamlandı</span>
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-info" role="progressbar" style="width:@item.Value%" aria-valuenow="@item.Value%" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td style="text-align:center"><a class="btn btn-outline-danger" href="/Portfolio/DeletePortfolio/@item.PortfolioID" onclick="return confirm('Silme İşlemini Onaylayın!');">Sil</a></td>
                                <td style="text-align:center"><a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio" class="btn btn-outline-warning">Yeni Proje Ekle</a>
            </div>
        </div>
    </div>
</div>
