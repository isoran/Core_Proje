@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Paneli</h1>
<br />

<form class="form-group" method="post">
    @Html.Label("Alıcı Mail")
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", style = "color:white", type = "mail" })
    @Html.ValidationMessageFor(x => x.Receiver, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", style = "color:white" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 4, 3, new { @class = "form-control", style = "color:white" })
    <br />
    <button class="btn btn-outline-success">Gönder</button>
    <button type="button" class="btn btn-outline-danger" onclick="goBack()">Vazgeç</button>

</form>

<script>
    function goBack() {
        window.history.back();
    }
</script>