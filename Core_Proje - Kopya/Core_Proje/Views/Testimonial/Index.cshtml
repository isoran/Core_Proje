@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Görsel </th>
                                <th> Ad Soyad </th>
                                <th> Unvan </th>
                                <th> Şirket </th>
                                <th> Sil </th>
                                <th> Güncelle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td> @item.ClientName </td>
                                    <td> @item.ClientBranch </td>
                                    <td> @item.Company </td>
                                    <td style="text-align:center"><a class="btn btn-outline-danger" href="/Testimonial/DeleteTestimonial/@item.TestimonialID" onclick="return confirm('Silme İşlemini Onaylayın!');">Sil</a></td>
                                    <td style="text-align:center"><a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Testimonial/AddTestimonial" class="btn btn-outline-warning">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
